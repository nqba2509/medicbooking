<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    .btn-edit {
      display: inline-block;
      height: 23px;
      width: 60px;
      margin: 5px 0;
      outline: none;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      text-align: center;
      background-color: orange;
      font-weight: 500;
    }

    .btn-delete {
      display: inline-block;
      height: 23px;
      width: 60px;
      margin: 5px 0;
      outline: none;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      text-align: center;
      background-color: red;
      font-weight: 500;
    }
  </style>

  <body style="width: 100%">
    <table>
      <tr>
        <th>Email</th>
        <th>FistName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>

        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id%>"
            class="btn-edit"
            type="button"
            >Edit</a
          >
          <a href="/" class="btn-delete" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
